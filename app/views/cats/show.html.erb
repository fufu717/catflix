  <head>
    <title>CATFLIX</title>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css?family=Noto+Sans+JP&display=swap" rel="stylesheet">
    <link href="jumbotron.css" rel="stylesheet">
    <link href="../example.css" rel="stylesheet">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'relord' %>
  </head>

<%= render "shared/header"%>

<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= "#{@cat.name}ちゃんの情報"%>
      </h2>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">名前</th>
            <td class="table__col2"><%= @cat.name %></td>
          </tr>
          <tr>
            <th class="table__col1">種類</th>
            <td class="table__col2"><%= @cat.cat_type.name %></td>
          </tr>
          <tr>
            <th class="table__col1">誕生日</th>
            <td class="table__col2"><%= @cat.birth_day %></td>
          </tr>

        </tbody>
      </table>
      <h2 class="page-heading">
        <%= "#{@cat.name}ちゃんの動画"%>
      </h2>
      <div class="user__card">
          <tbody>
    <% @movies.each do |movie| %>
    <p id="notice"><%= notice %></p>

    <% if movie.movie.attached? %>
    <div class="content">
    <p><%= movie.created_at.to_s(:datetime) %></p>
    <p><%= movie.cat.cat_type.name %></p>
          <div class='title'>
        <%= movie.title %>
      </div>
        <video src="<%= rails_blob_path(movie.movie) %>" type="video/mp4" controls></video>
      <div class='text'>
        <%= movie.text %>
      </div>
      <div class='user-name'>
        <%= "#{movie.user.nickname}さんの#{movie.cat.name}ちゃん" %>
      </div>
    </div>
    <% end %>

    <% end %>

  </tbody>
      </div>
    </div>
  </div>
</div>